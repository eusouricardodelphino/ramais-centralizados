<main class="form-signin">
<h1 class="h3 mb-3 fw-normal">Por favor, cadastre-se para começar</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field mb-3">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", 
      class: "form-control", placeholder: "name@louveira.sp.gov.br" %>
  </div>

  <div class="field mb-3">
    <%= f.label "Senha" %>
    <% if @minimum_password_length %>
      <small>
        <em>(A senha precisa de <%= @minimum_password_length %> caracteres no mínimo)</em>
      </small>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", 
      class: "form-control", placeholder: "******"  %>
  </div>

  <div class="field mb-3">
    <%= f.label "Confirmação da senha" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", 
      class: "form-control", placeholder: "******"  %>
  </div>

  <div class="actions mb-3">
    <%= f.submit "Sign up", class: "w-100 btn btn-lg btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</main>