<div class="container">
  <header class="d-flex justify-content-center py-3">
    <ul class="nav nav-pills">
      <li class="nav-item">
        <%= link_to "Home", root_path, class: "nav-link" %>
      </li>
      <% if signed_in? %>
        <% if current_user.employee %>
          <%= link_to "Perfil", edit_employee_url(current_user.employee), class: "nav-link" %>
        <% else %>
          <%= link_to "Completar Perfil", new_employee_path, class: "nav-link" %>
        <% end %>
        <%= link_to "Conta", edit_user_registration_path, class: "nav-link" %>
        <%= link_to "Sair", destroy_user_session_path, method: :delete, class: "nav-link" %>
      <% else %>
        <li class="nav-item">
          <%= link_to "Por que usar?", root_path + "#features", class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Perguntas Frequentes", root_path + "#faq", class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Entrar", new_user_session_path, class: "nav-link active" %>
        </li>
      <% end %>
    </ul>
  </header>
</div>